@model Faces.WebMvc.Core.Models.Order.Order

@{
    ViewData["Title"] = "Order detail";
}

<h1>Details</h1>

<div>
    <h4>Order @Model.OrderId</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserEmail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageString)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.ImageString" width="50px" height="50px" />
        </dd>
    </dl>
    <dl class="row">
        <dd class="col-sm-10">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Order Detail Id
                        </th>
                        <th>
                            Image
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderDetails)
                    {
                        <tr>
                            <td>
                                @item.OrderDetailId
                            </td>
                            <td>
                                <img src="@item.ImageString" width="50px" height="50px" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </dd>
    </dl>
</div>
